---
import { getT } from "@/i18n/t";
const lang = Astro.currentLocale;
const t = getT(lang);

const year = new Date().getFullYear();
const BASE_URL = "";
---

<footer class="bg-zinc-900 mt-16">
	<div class="mx-auto w-full max-w-screen-xl p-4 py-6 lg:py-8">
		<div class="md:flex md:justify-between">
			<div class="mb-6 md:mb-0">
				<a href={BASE_URL} class="flex items-center">
					<img
						src=`${BASE_URL}/static/images/tejory_logo.png`
						class="h-8 me-3"
						alt="Tejory Logo"
					/>
				</a>
			</div>
			<div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
				<div>
					<h5 class="pb-4 text-sm font-semibold text-gray-200 uppercase">
						{t("resources")}
					</h5>
					<ul class="text-gray-500 font-medium">
						<li class="mb-4">
							<a href=`${BASE_URL}/${lang}/apps` class="hover:underline"
								>{t("apps")}</a
							>
						</li>
						<li class="mb-4">
							<a href=`${BASE_URL}/${lang}/road-map` class="hover:underline"
								>{t("roadMap")}</a
							>
						</li>
						<li>
							<a href=`${BASE_URL}/${lang}/contact-us` class="hover:underline"
								>{t("contactUs")}</a
							>
						</li>
					</ul>
				</div>
				<div>
					<h5 class="pb-4 text-sm font-semibold text-gray-200 uppercase">
						{t("forBusiness")}
					</h5>
					<ul class="text-gray-500 font-medium">
						<li class="mb-4">
							<a
								href=`${BASE_URL}/${lang}/merchant-services`
								class="hover:underline">{t("merchantServices")}</a
							>
						</li>
						<li class="mb-4">
							<a href=`${BASE_URL}/${lang}/co-branding` class="hover:underline"
								>{t("coBranding")}</a
							>
						</li>
						<li>
							<a
								href="https://integrityph.github.io/tejory-merchant/"
								target="_blank"
								class="hover:underline">{t("tejoryPOS")}</a
							>
						</li>
					</ul>
				</div>
				<div>
					<h5 class="pb-4 text-sm font-semibold text-gray-200 uppercase">
						{t("legal")}
					</h5>
					<ul class="text-gray-500 font-medium">
						<li class="mb-4">
							<a
								href=`${BASE_URL}/${lang}/privacy-policy`
								class="hover:underline">{t("privacyPolicy")}</a
							>
						</li>
						<li class="mb-4">
							<a
								href=`${BASE_URL}/${lang}/terms-of-service`
								class="hover:underline">{t("termsOfService")}</a
							>
						</li>
						<li>
							<a href=`${BASE_URL}/${lang}/disclaimer` class="hover:underline"
								>{t("disclaimer")}</a
							>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="sm:flex sm:items-center sm:justify-between pt-8">
			<span class="text-sm text-gray-500 sm:text-center"
				>Â© {year}
				<a href="https://khgroupinc.net/" class="text-white hover:underline"
					>KH Trading Group Inc</a
				>
				{t("allRightsReserved")}
			</span>
			<div class="flex mt-4 sm:justify-center sm:mt-0">
				<a
					href="https://www.facebook.com/tejorywallet"
					class="text-gray-500 hover:text-blue-500"
				>
					<svg
						class="w-4 h-4"
