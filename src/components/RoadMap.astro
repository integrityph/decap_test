---
import { defaultLang } from "@/i18n/ui";
import { getCollection } from "astro:content"

const lang = Astro.currentLocale || defaultLang;
const roadmap = await getCollection("road_map");
const roadmapItems = await Promise.all(roadmap
	.filter(entry => entry.slug.startsWith(`${lang}/`))
	.sort((a,b) => (a.data.date > b.data.date)? -1 : 1)
	.map(async entry => {
		const { Content } = await entry.render()
		return {
			data: entry.data,
			Content: Content,
		};
	})
);
---
<div class="px-8 mt-8 max-w-7xl mx-auto">
	<ol class="relative border-s border-gray-200 dark:border-gray-700">
		{
			roadmapItems.map((entry) => (
				<li class="mb-10 ms-4">
					{
						entry.data.done 
						? <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-amber-900 dark:bg-amber-500"></div>
						: <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
					}
					<time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{entry.data.date}</time>
					<h3 class="text-lg font-semibold text-gray-900 dark:text-white">{entry.data.name}</h3>
					<div class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400"><entry.Content /></div>
			</li>
			))
		}
	</ol>
</div>